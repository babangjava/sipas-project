<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:security="http://www.springframework.org/schema/security"
       xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <security:http auto-config="true" use-expressions="true" >
        <security:custom-filter before="CHANNEL_FILTER" ref="httpsEnforcer"/>
        <security:intercept-url pattern="/login*" access="permitAll"/>
        <security:intercept-url pattern="/assets/**" access="permitAll"/>
        <security:intercept-url pattern="/" access="isAuthenticated()" />
        <security:intercept-url pattern="/index" access="hasRole('ROLE_ADMIN') or hasRole('ROLE_USER')"/>
        <security:intercept-url pattern="/user/**" access="hasRole('ROLE_ADMIN')"/>
        <security:intercept-url pattern="/report/**" access="hasRole('ROLE_ADMIN')"/>
        <security:intercept-url pattern="/menuitem/**" access="hasRole('ROLE_ADMIN')"/>
        <security:intercept-url pattern="/change/**" access="hasRole('ROLE_ADMIN') or hasRole('ROLE_USER')"/>
        <security:intercept-url pattern="/suratmasuk/**" access="hasRole('ROLE_ADMIN') or hasRole('ROLE_USER')"/>
        <security:intercept-url pattern="/suratkeluar/**" access="hasRole('ROLE_ADMIN') or hasRole('ROLE_USER')"/>
        <security:intercept-url pattern="/uploaddocument/**" access="hasRole('ROLE_ADMIN') or hasRole('ROLE_USER')"/>
        <security:form-login login-page="/login" login-processing-url="/authenticate" default-target-url="/index" always-use-default-target="true" authentication-failure-url="/login?error" username-parameter="username" password-parameter="password" />
        <security:logout logout-url="/logout" logout-success-url="/login?logout" invalidate-session="true" />
        <security:access-denied-handler ref="customAccessDeniedHandler" />
        <!--<security:csrf />-->
    </security:http>

    <security:authentication-manager>
        <security:authentication-provider user-service-ref="userDetailsService"/>
    </security:authentication-manager>


    <bean name="userDetailsService" class="org.demo.web.controller.LoadUsername" />
    <bean id="customAccessDeniedHandler" class="org.demo.web.utils.AccessDeniedHandler"></bean>
    <bean id="httpsEnforcer" class="org.demo.web.utils.HttpsEnforcer"></bean>
    <!--<bean id="encoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder">-->
        <!--<constructor-arg name="strength" value="11"/>-->
    <!--</bean>-->

</beans>